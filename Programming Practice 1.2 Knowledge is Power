public class Knowledgeispower
{
    //-----------------------------------------------------
    // Prints  Knowledge is power three times
    //-----------------------------------------------------
    public static void main (String[] args) 
    {
        System.out.println (" Knowledge is Power \n" +
        " Knowledge \n" +
        " Is \n" +
        " Power \n" +
        "====================== \n" +
        "|                    | \n" +
        "| Knowledge is Power | \n" +
        "|                    | \n" + 
        "====================== \n");
    }
}
