public class rollDie
{
    int numofsides;
    public rollDie(int numofsides)
    {
        this.numofsides = numofsides;
    }

    public String toString()
    {
        return numofsides + "";
    }
    public int roll()
    {
        int x = numofsides + 1;
        int random = (int) (Math.random() * x);
        return random;
    }

}
